<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ligh_brown"
    android:padding="16dp">
    <androidx.cardview.widget.CardView
        android:layout_width="132dp"
        android:layout_height="132dp"
        app:cardCornerRadius="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="12sp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to MyBook"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginBottom="20sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/edt_register_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Tên người dùng"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:textSize="20dp"
                android:layout_marginBottom="18dp"
                android:drawableLeft="@drawable/icon_person"
                android:drawablePadding="5dp"/>

            <EditText
                android:id="@+id/edt_register_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Email"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:textSize="20dp"
                android:layout_marginBottom="18dp"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="5dp"/>

            <EditText
                android:id="@+id/edt_register_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="number"
                android:hint="Số điện thoại"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:textSize="20dp"
                android:layout_marginBottom="18dp"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="5dp"/>

            <EditText
                android:id="@+id/edt_register_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Mật khẩu"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:textSize="20dp"
                android:layout_marginBottom="18dp"
                android:drawableLeft="@drawable/icon_password"
                android:drawablePadding="5dp"/>

            <EditText
                android:id="@+id/edt_register_repassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Nhập lại mật khẩu"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:textSize="20dp"
                android:layout_marginBottom="18dp"
                android:drawableLeft="@drawable/icon_password"
                android:drawablePadding="5dp"/>
            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Đăng kí"
                android:backgroundTint="@color/btn_color_brown"
                android:layout_marginBottom="18dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bạn đã có tài khoản"
                    android:layout_marginRight="10dp"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/link_login"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>