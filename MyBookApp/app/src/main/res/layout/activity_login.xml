<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="10dp"
    android:background="@color/ligh_brown">


    <androidx.cardview.widget.CardView
        android:layout_width="132dp"
        android:layout_height="132dp"
        app:cardCornerRadius="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="18dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to MyBook"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginBottom="40sp"/>


    <EditText
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Email"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_marginBottom="18dp"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="5dp"/>
    <EditText
        android:id="@+id/edt_pasword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="Mật khẩu"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_marginBottom="18dp"
        android:drawableLeft="@drawable/icon_password"
        android:drawablePadding="5dp"
        android:inputType="textPassword"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Đăng nhập"
        android:backgroundTint="@color/btn_color_brown"
        android:layout_marginBottom="18dp"/>

    <TextView
        android:id="@+id/tv_forgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password"
        android:textAlignment="center"
        android:layout_marginBottom="18dp"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập bằng"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="18dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn đã có tài khoản?"
            android:layout_marginRight="8dp"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/link_register"
            android:textStyle="bold"
            android:textSize="20sp"
            />

    </LinearLayout>
</LinearLayout>