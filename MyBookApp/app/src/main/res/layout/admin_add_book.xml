<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.AddBookActivity"
    android:padding="10dp">

    <EditText
        android:id="@+id/edt_book_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Book Title"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/edt_book_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Book description"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tv_book_category"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Book category"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/ic_expand_more"
        android:drawablePadding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_choose_pdf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Choose bookpdf"
            android:textSize="20dp"
            android:layout_marginRight="5dp"
            android:background="@color/ligh_brown"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/edt_book_pdf_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="20dp"
            android:editable="false"
            android:hint="PDF"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Book" />
</LinearLayout>